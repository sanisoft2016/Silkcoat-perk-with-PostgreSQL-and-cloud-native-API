{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "password": {
      "type": "parameter.v0",
      "value": "{password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "username": {
      "type": "parameter.v0",
      "value": "{username.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "silkcoatpostgres": {
      "type": "container.v0",
      "connectionString": "Host={silkcoatpostgres.bindings.tcp.host};Port={silkcoatpostgres.bindings.tcp.port};Username={username.value};Password={password.value}",
      "image": "docker.io/library/postgres:17.0",
      "volumes": [
        {
          "name": "custrewardmgtsys.apphost-bacb8eff4e-silkcoatpostgres-data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "{username.value}",
        "POSTGRES_PASSWORD": "{password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 5433,
          "targetPort": 5432
        }
      }
    },
    "silkcoatDb": {
      "type": "value.v0",
      "connectionString": "{silkcoatpostgres.connectionString};Database=silkcoatDb"
    },
    "custrewardmgtsys-v3-api": {
      "type": "project.v0",
      "path": "../CustRewardMgtSys.API/CustRewardMgtSys.API.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{custrewardmgtsys-v3-api.bindings.http.targetPort}",
        "ConnectionStrings__silkcoatDb": "{silkcoatDb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    }
  }
}