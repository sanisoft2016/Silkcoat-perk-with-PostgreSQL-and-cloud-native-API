apiVersion: apps/v1
kind: Deployment
metadata:
  name: custrewardmgtsys-v3-ui
  labels:
    app: custrewardmgtsys-v3-ui
spec:
  replicas: 1
  selector:
    matchLabels:
      app: custrewardmgtsys-v3-ui
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: custrewardmgtsys-v3-ui
    spec:
      containers:
        - name: custrewardmgtsys-v3-ui
          image: sanibesiru/custrewardmgtsys-v3-ui:v3.0.0
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 80  # Angular default port
      terminationGracePeriodSeconds: 180

---
apiVersion: v1
kind: Service
metadata:
  name: custrewardmgtsys-v3-ui
spec:
  selector:
    app: custrewardmgtsys-v3-ui
  ports:
  - name: http
    port: 8080
    targetPort: 80
    nodePort: 30080
  -name: https
    port: 8443
    targetPort: 8443
    nodePort: 30443
  type: NodePort
